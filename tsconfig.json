{
	"compilerOptions": {
		"module": "ES6",
		"target": "esnext",
		"jsx": "preserve",
		"lib": ["dom", "es2015", "es2017"],
		"strict": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"removeComments": false,
		"preserveConstEnums": true
	},
	"include": ["./src/**/*"]
}
